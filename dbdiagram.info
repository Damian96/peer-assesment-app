Table "Customer" {
  "c_id" int [pk, not null, increment, note: 'Auto Increment']
  "username" varchar(16) [unique, not null, note: 'Unique Customer Identification']
  "hash" varchar(32) [not null, note: 'md5( CONCAT(username,password) )']
  "ip" varchar(45) [not null, note: 'the clients I.P.'] 
  "title" varchar(100) [note: 'short business / person title']

Indexes {
  username [name: "idx_Customer_username"]
}
}

Table "Product" {
  "p_id" int [pk, not null, increment]
  "slug" varchar(30) [unique, not null, note: 'Plugin / Theme directory name']
  "version" varchar(8) [not null, note: 'uploaded version, used to cross reference with the client. XY.XY.XY']
  "type" char(1) [not null, note: 'T for Theme / P for Plugin']

        
Indexes {
  slug [name: "idx_Product_slug"]
}
}

Table "Customer_Product" {
  "customer_id" int [pk, not null]
  "product_id" int [pk, not null]
  "active" char(1) [note: 'registered or not']

        
Indexes {
  (customer_id, product_id) [unique, name: "Customer_Product_index_0"]
}
}

Ref:"Customer"."c_id" < "Customer_Product"."customer_id"

Ref:"Product"."p_id" < "Customer_Product"."product_id"
